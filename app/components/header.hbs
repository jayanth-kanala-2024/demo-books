<header>
    <nav class="border-gray-200">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <LinkTo @route="index" class="flex items-center space-x-3 rtl:space-x-reverse">
                <img src="/brand.png" class="h-8" alt="Freshbooks Logo" />
                <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">freshbooks</span>
            </LinkTo>
            <Nav::Language />
            <Nav::List @navbarLocale={{@globals.translations.navbar}} />
            {{#unless @globals.auth.isAuthenticated}}
            <Nav::Authenticate/>
            {{/unless}}
            {{#if @globals.auth.isAuthenticated}}
            <Nav::UserDropdownMenu/>
            {{/if}}
        </div>
        <hr class="h-px mb-8 bg-gray-200 border-0 dark:bg-gray-700">
    </nav>
</header>